# SaintVisionAI™ Production Environment Configuration
# Azure Deployment - SaintSal Core Production

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://saintvisionai-production.azurewebsites.net
NEXT_PUBLIC_APP_NAME="SaintVisionAI™"

# Supabase Production (Replace with your production values)
NEXT_PUBLIC_SUPABASE_URL=YOUR_PRODUCTION_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SUPABASE_SERVICE_ROLE_KEY

# Azure Cognitive Services (Your patent technology)
AZURE_COGNITIVE_SERVICES_KEY=YOUR_AZURE_COGNITIVE_SERVICES_KEY
AZURE_COGNITIVE_SERVICES_ENDPOINT=YOUR_AZURE_COGNITIVE_SERVICES_ENDPOINT
AZURE_COGNITIVE_SERVICES_REGION=eastus

# OpenAI Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# GoHighLevel White Label Configuration
GHL_API_KEY=YOUR_GHL_API_KEY
GHL_AGENCY_ID=YOUR_GHL_AGENCY_ID
GHL_WEBHOOK_SECRET=YOUR_GHL_WEBHOOK_SECRET
GHL_BASE_URL=https://rest.gohighlevel.com/v1

# Stripe Payment Processing
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# Twilio Communications
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# JWT Security
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_256_BITS_MINIMUM
NEXTAUTH_SECRET=YOUR_PRODUCTION_NEXTAUTH_SECRET
NEXTAUTH_URL=https://saintvisionai-production.azurewebsites.net

# Email Configuration
SMTP_HOST=YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USER=YOUR_SMTP_USER
SMTP_PASS=YOUR_SMTP_PASS
SMTP_FROM=noreply@saintvisionai.com

# Analytics and Monitoring
NEXT_PUBLIC_GA_ID=YOUR_GOOGLE_ANALYTICS_ID
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Redis Cache (Azure Redis Cache)
REDIS_URL=YOUR_AZURE_REDIS_CONNECTION_STRING

# File Storage (Azure Blob Storage)
AZURE_STORAGE_ACCOUNT_NAME=YOUR_AZURE_STORAGE_ACCOUNT
AZURE_STORAGE_ACCOUNT_KEY=YOUR_AZURE_STORAGE_KEY
AZURE_STORAGE_CONTAINER_NAME=saintvisionai-files

# Security
ENCRYPTION_KEY=YOUR_PRODUCTION_ENCRYPTION_KEY_32_BYTES
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# Feature Flags
FEATURE_GOTTA_GUY_ENABLED=true
FEATURE_CLIENT_SUBDOMAINS_ENABLED=true
FEATURE_GHL_INTEGRATION_ENABLED=true
FEATURE_AZURE_COGNITIVE_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Performance
NEXT_PUBLIC_CDN_URL=https://cdn.saintvisionai.com
CACHE_TTL=3600
MAX_UPLOAD_SIZE=10485760

# Custom Domain (Update after setting up custom domain)
CUSTOM_DOMAIN=app.saintvisionai.com
