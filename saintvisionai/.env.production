# ============================================
# SaintVisionAI™ Production Environment
# ============================================
# Platform: Azure App Service
# Version: 2.0.0

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://saintvisionai-production.azurewebsites.net
NEXT_PUBLIC_APP_NAME="SaintVisionAI™"

# Core Branding
NEXT_PUBLIC_CORE_TECH_NAME="SaintSal™"
NEXT_PUBLIC_PLATFORM_NAME="SaintVisionAI™"
NEXT_PUBLIC_COMPANION_NAME="GOTTA GUY™"

# Supabase Production (Replace with your production values)
NEXT_PUBLIC_SUPABASE_URL=YOUR_PRODUCTION_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SUPABASE_SERVICE_ROLE_KEY

# Azure Cognitive Services (Your patent technology)
AZURE_COGNITIVE_SERVICES_KEY=YOUR_AZURE_COGNITIVE_SERVICES_KEY
AZURE_COGNITIVE_SERVICES_ENDPOINT=YOUR_AZURE_COGNITIVE_SERVICES_ENDPOINT
AZURE_COGNITIVE_SERVICES_REGION=eastus

# OpenAI Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# Feature Flags
FEATURE_GOTTA_GUY_ENABLED=true
FEATURE_CLIENT_SUBDOMAINS_ENABLED=true
FEATURE_AZURE_COGNITIVE_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Security
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_256_BITS_MINIMUM
NEXTAUTH_SECRET=YOUR_PRODUCTION_NEXTAUTH_SECRET
NEXTAUTH_URL=https://saintvisionai-production.azurewebsites.net

# Performance
NEXT_PUBLIC_CDN_URL=https://cdn.saintvisionai.com
CACHE_TTL=3600
MAX_UPLOAD_SIZE=10485760
