# SaintVisionAI™ Production Environment Configuration
# Your Azure-powered GOTTA GUY™ platform

# Domain Configuration
NEXT_PUBLIC_APP_DOMAIN=saintvisionai.com
NEXT_PUBLIC_APP_URL=https://saintvisionai.com

# Azure Production Database (use your existing Azure SQL)
DATABASE_URL=Server=tcp:your-sql-server.database.windows.net,1433;Initial Catalog=SaintVisionAI_Prod;Persist Security Info=False;User ID=your-admin;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# Supabase Production (if using)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Azure Cognitive Services (your patent technology!)
AZURE_OPENAI_API_KEY=your-azure-cognitive-key
AZURE_OPENAI_ENDPOINT=https://your-cognitive-service.openai.azure.com/
AZURE_GPT_35_TURBO_NAME=gpt-35-turbo
AZURE_GPT_45_VISION_NAME=gpt-4-vision
AZURE_GPT_45_TURBO_NAME=gpt-4-turbo
AZURE_EMBEDDINGS_NAME=text-embedding-ada-002

# Azure Speech Services
AZURE_SPEECH_SERVICES_KEY=your-speech-key
AZURE_SPEECH_SERVICES_REGION=eastus

# GoHighLevel White Label Enterprise
GHL_API_KEY=your-ghl-production-key
GHL_BASE_URL=https://services.leadconnectorhq.com
GHL_LOCATION_ID=your-production-location-id
GHL_COMPANY_ID=your-company-id

# Stripe Production
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-key
STRIPE_SECRET_KEY=sk_live_your-live-secret
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret

# Twilio Production
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-number

# Security
NEXTAUTH_SECRET=your-super-secure-production-secret
NEXTAUTH_URL=https://saintvisionai.com

# Performance & Monitoring
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-insights-key

# Redis Cache (Azure Cache for Redis)
REDIS_CONNECTION_STRING=your-azure-redis-connection

# File Storage (Azure Blob Storage)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=saintvisionai-files

# Email (Azure Communication Services)
AZURE_COMMUNICATION_CONNECTION_STRING=your-communication-string

# Feature Flags
ENABLE_GOTTA_GUY_VOICE=true
ENABLE_CLIENT_SUBDOMAINS=true
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_WHITE_LABEL=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
