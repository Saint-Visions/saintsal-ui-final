{
  "manifest_version": 3,
  "name": "PartnerTech AI Companion",
  "version": "1.0.0",
  "description": "Intent-powered prospecting, scheduling, and deal-flow automation right in your browser. Patent #10,290,222 protected technology.",
  "author": "Saint Vision Technologies",
  "homepage_url": "https://partnertech.ai",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "background",
    "contextMenus",
    "notifications",
    "webNavigation",
    "tabs",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://api.partnertech.ai/*",
    "https://app.partnertech.ai/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "PartnerTech AI Companion - Click to discover leads",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "companion.html",
        "icons/*.png",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://partnertech.ai/*",
      "https://*.partnertech.ai/*",
      "https://app.partnertech.ai/*"
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "88"
}
